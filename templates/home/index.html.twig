{% extends 'base.html.twig' %}

{% block title %}mSkate {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        <div><a href="{{ path('app_user_show', {'id': app.user.id}) }}">Profil</a></div>

    {% endif %}
    {% if not app.user %}

        <div><a href="{{ path('app_login')}}" >Se connecter</a></div>
        <div><a href="{{ path('app_register')}}" >S'inscrire</a></div>
        
    {% endif %}


